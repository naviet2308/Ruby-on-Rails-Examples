<h1>Listing Articles</h1>
<%= link_to 'My blog', controller: 'articles' %>
<%= link_to 'Back', new_article_path %>
<table>
	<tr>
		<th>Title</th>
		<th>Text</th>
	</tr>

	<% @articles.each do |article| %>
		<tr>
			<td>
				<%= article.title %>
			</td>
			<td>
				<%= article.text %>
			</td>
		</tr>
	<% end %>
</table>